<!DOCTYPE html>

<html lang="en">

<head>

    <meta charset="utf-8" />

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - FlyEasy</title>



    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" xintegrity="sha384-QWTK7wA3vP5+aA9T9pS/R6qE5d5qA4qI3j3B5oWlO3jN5eJ5j4+aA3jR4p5j9aF9aA3+r3lR9aF9" crossorigin="anonymous">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <link rel="preconnect" href="https://fonts.googleapis.com">

    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">



    <style>

        html, body {
            height: 100%;
            margin: 0;
        }



        body {
            font-family: 'Inter', sans-serif;
            background-color: #f7f9fc;
            display: flex;
            flex-direction: column;
        }



        .main-content {
            flex: 1;
        }



        .navbar {
            background: linear-gradient(to right, #2c5282, #4a90e2) !important;
            padding: 1rem 0;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        }



        .navbar-brand {
            font-size: 1.875rem;
            font-weight: bold;
            color: white !important;
            position: relative;
            padding-left: 2.5rem;
            outline: none !important;
        }



            .navbar-brand::before {
                content: '\f5b0';
                font-family: 'Font Awesome 5 Free';
                font-weight: 900;
                position: absolute;
                left: -0.5rem;
                top: 50%;
                transform: translateY(-50%) rotate(-20deg);
                font-size: 3rem;
                opacity: 0.3;
                transition: transform 0.3s ease-in-out;
            }





            .navbar-brand:hover::before {
                transform: translateY(-50%) rotate(0deg);
            }



        .nav-link,
        .dropdown-item,
        .admin-panel-btn,
        .login-section-nav a,
        .login-section-nav button {
            color: white !important;
            font-weight: 500;
            transition: all 0.3s ease;
            text-decoration: none !important;
            outline: none !important;
            border-radius: 25px;
            padding: 0.5rem 1rem;
            background: transparent;
            border: none;
            cursor: pointer;
            white-space: nowrap;
        }



            .nav-link:hover,
            .dropdown-item:hover,
            .admin-panel-btn:hover,
            .login-section-nav a:hover,
            .login-section-nav button:hover {
                text-decoration: none !important;
                color: white !important;
                background: rgba(255, 255, 255, 0.2);
            }



        .nav-item.dropdown .nav-link {
            background: transparent;
            border-radius: 25px;
            padding: 0.5rem 1rem;
            font-weight: 600;
            color: white !important;
            transition: background-color 0.3s ease;
            outline: none !important;
            border: none;
            white-space: nowrap;
        }



            .nav-item.dropdown .nav-link:hover,
            .nav-item.dropdown .nav-link.show {
                background: rgba(255, 255, 255, 0.2);
                color: white !important;
            }



        .dropdown-menu-blue {
            background: #212529;
            border: none;
            border-radius: 10px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            min-width: 180px;
        }



            .dropdown-menu-blue .dropdown-item {
                color: white;
                font-weight: 500;
                padding: 0.75rem 1rem;
                transition: background-color 0.3s ease;
                border-radius: 8px;
                margin: 0.2rem 0.5rem;
            }



        @@media (max-width: 991.98px) {
            .navbar

        {
            padding: 0.5rem 0;
        }

        .container-fluid {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            align-items: center;
            flex-direction: row;
        }

        .navbar-brand {
            order: 3; /* FlyEasy on the far right */
            margin-left: auto;
            padding: 0;
            position: static;
            transform: none;
        }

            .navbar-brand::before {
                display: none;
            }

        .login-section-nav {
            order: 1; /* Login section on the far left */
            margin-right: auto;
        }

        .navbar-toggler {
            order: 2; /* Toggler in the middle */
        }

        .navbar-collapse {
            flex-grow: 1;
            flex-direction: column;
            align-items: flex-start;
            width: 100%;
            margin-top: 1rem;
        }

        .navbar-nav {
            width: 100%;
            text-align: left;
        }

            .navbar-nav .nav-item {
                margin-right: 0;
                margin-bottom: 0.5rem;
            }

        .admin-panel-btn {
            width: 100%;
            margin-bottom: 1rem;
            text-align: left;
        }

        }



        /*Footer CSS*/

        .footer {
            background: linear-gradient(to right, #2c5282, #4a90e2) !important;
            color: white;
            padding: 1rem 0;
        }



            .footer h5 {
                font-weight: 600;
                margin-bottom: 0.75rem;
            }



            .footer a {
                color: white;
                display: block;
                text-decoration: none;
                transition: color 0.3s ease;
                margin-bottom: 0.3rem;
                font-size: 0.9rem;
            }



                .footer a:hover {
                    color: #d1e7ff;
                    text-decoration: none;
                }



            .footer p {
                font-size: 0.8rem;
                line-height: 1.3;
            }



        .footer-bottom {
            text-align: center;
            margin-top: 0.75rem;
            font-size: 0.9rem;
            opacity: 0.8;
        }

    </style>

</head>



<body class="d-flex flex-column min-vh-100">

    <header>

        <nav class="navbar navbar-expand-lg">

            <div class="container-fluid">
                <div class="d-flex align-items-center d-none d-lg-block">
                    <div class="login-section-nav me-3">
                        @await Html.PartialAsync("_LoginPartial")
                    </div>
                </div>

                <button class="navbar-toggler border-0 d-lg-none" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <i class="fas fa-bars text-white"></i>
                </button>

                <a class="navbar-brand" asp-controller="Home" asp-action="Index">FlyEasy</a>


                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i></i> Admin Panel
                                </a>
                                <ul class="dropdown-menu dropdown-menu-blue">
                                    <li><a class="dropdown-item" asp-controller="AirPlane" asp-action="GetAll">Airplanes</a></li>
                                    <li><a class="dropdown-item" asp-controller="Flight" asp-action="GetAll">Flights</a></li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Flight" asp-action="Search">
                                    <i class="fas fa-search me-2"></i> Search Flights
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Flight" asp-action="GetAll">Flights</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Booking" asp-action="MyBookings">My Bookings</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Flight" asp-action="Search">Book a Flight</a>
                            </li>
                        }
                        <li class="nav-item d-lg-none">
                            <div class="login-section-nav mt-3">
                                @await Html.PartialAsync("_LoginPartial")
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>



    <div class="container main-content">

        <main role="main">

            @RenderBody()

        </main>

    </div>



    <footer class="footer">

        <div class="container">

            <div class="row justify-content-center text-center">

                <div class="col-sm-5 col-md-4 mb-3 mb-sm-0">

                    <h5>Contact Us</h5>

                    <a href="mailto:contact@mghnam2022@gmail.com">

                        <i class="fas fa-envelope me-2"></i>

                        mghnam2022@gmail.com

                    </a>

                    <a href="tel:+15551234567" class="mt-1">

                        <i class="fas fa-phone me-2"></i>

                        01272976287

                    </a>



                    <a href="https://eg.linkedin.com/in/mohamed-salem-781a66291" target="_blank" class="mt-1">

                        <i class="fab fa-linkedin me-2"></i>

                        LinkedIn

                    </a>





                </div>



                <div class="col-sm-5 col-md-4">

                    <h5>About Us</h5>

                    <p>Your journey starts here.</p>

                    <p>We connect you with the world.</p>

                </div>

            </div>



            <div class="row justify-content-center">

                <div class="col-12 text-center mt-2">

                    <div class="footer-bottom">

                        &copy; 2025 FlyEasy. All rights reserved.

                    </div>

                </div>

            </div>

        </div>

    </footer>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" xintegrity="sha384-Y844PjJb/V34x9bQx/Kx/pW78LzF/3+9zX9k1yL6j+xL6x+y6x+y5x5" crossorigin="anonymous"></script>



    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>