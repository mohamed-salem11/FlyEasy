@model List<Passenger>

<h2 class="text-center mb-4 mt-4">Enter Passenger Details</h2>

<form method="post" asp-action="DataOfPasserngers">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                Passenger @(i + 1)
            </div>
            <div class="card-body">
                <input type="hidden" name="[@i].Id" value="@Model[i].Id" />

                <div class="mb-3">
                    <label for="FullName_@i" class="form-label">Full Name</label>
                    <input type="text" name="[@i].FullName" id="FullName_@i" class="form-control" value="@Model[i].FullName" required />
                </div>

                <div class="mb-3">
                    <label for="Nationality_@i" class="form-label">Nationality</label>
                    <input type="text" name="[@i].Nationality" id="Nationality_@i" class="form-control" value="@Model[i].Nationality" required />
                </div>

                <div class="mb-3">
                    <label for="PhoneNumber_@i" class="form-label">Phone Number</label>
                    <input type="text" name="[@i].PhoneNumber" id="PhoneNumber_@i" class="form-control" value="@Model[i].PhoneNumber" required />
                </div>

                <div class="mb-3">
                    <label for="PassportNumber_@i" class="form-label">Passport Number</label>
                    <input type="text" name="[@i].PassportNumber" id="PassportNumber_@i" class="form-control" value="@Model[i].PassportNumber" required />
                </div>
            </div>
        </div>
    }

    <div class="text-center">
        <button type="submit" class="btn btn-primary px-4 py-2 mb-4">Continue</button>
    </div>

</form>







