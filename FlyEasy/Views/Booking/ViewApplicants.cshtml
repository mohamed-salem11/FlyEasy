@model IEnumerable<FlyEasy.Models.Booking>

@{
    ViewData["Title"] = "View Applicants";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4 p-3 bg-primary text-white rounded-4 shadow-sm">
        <h2 class="fw-bold m-0">
            <i class="bi bi-people-fill me-2"></i> Applicants for this Flight
        </h2>

        <div class="d-flex align-items-center">

            @if (Model != null && Model.Any())
            {
                <span class="badge bg-white text-primary fs-6 py-2 px-3 rounded-pill ms-3">
                    @Model.Count() Bookings
                </span>
            }
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center shadow-sm rounded-4" role="alert">
            <i class="bi bi-info-circle-fill me-2"></i>
            No bookings have been made for this flight yet.
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm rounded-4 overflow-hidden">
            <table class="table table-hover table-striped mb-0">
                <thead class="bg-primary text-white">
                    <tr>
                        <th scope="col" class="py-3">Booking Date</th>
                        <th scope="col" class="py-3">Number of Tickets</th>
                        <th scope="col" class="py-3">Total Price</th>
                        <th scope="col" class="py-3 text-center">Passengers</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in Model)
                    {
                        <tr>
                            <td>@booking.BookingDate.ToShortDateString()</td>
                            <td>@booking.NumberOfTickets</td>
                            <td>@booking.TotalPrice.ToString("C")</td>
                            <td class="text-center">
                                <a asp-controller="Booking"
                                   asp-action="ViewPassengers"
                                   asp-route-id="@booking.Id"
                                   class="btn btn-sm btn-primary rounded-pill">
                                    <i class="bi bi-person-lines-fill"></i> View Passengers
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
