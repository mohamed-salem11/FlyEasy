@model List<FlyEasy.Models.Passenger>

@{
    ViewData["Title"] = "View Passengers";
}

<div class="container py-5">
   <div class="card mb-5 shadow-sm rounded-4 border-0">
        <div class="card-header bg-primary text-white p-4 d-flex flex-column flex-md-row justify-content-between align-items-md-center rounded-top-4">
            <div>
                <h3 class="fw-bold mb-1">
                    <i class="bi bi-people-fill me-2"></i>
                    Passengers 
                </h3>
            </div>
            <div class="mt-3 mt-md-0">
                <span class="badge rounded-pill bg-white text-primary fs-6 py-2 px-3">
                    @Model.Count passenger@(Model.Count == 1 ? "" : "s")
                </span>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center rounded-4 shadow-sm" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            No passengers found for this booking.
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var passenger in Model)
            {
                <div class="col">
                    <div class="card h-100 border border-secondary rounded-4 shadow-sm overflow-hidden">
                        <!-- Card Header for Each Passenger -->
                        <div class="card-header bg-primary text-white d-flex align-items-center rounded-top-4">
                            <i class="bi bi-person-fill me-2 fs-5"></i>
                            <h5 class="fw-bold m-0">@passenger.FullName</h5>
                        </div>
                        <!-- Card Body -->
                        <div class="card-body bg-white p-4">
                            <ul class="list-group list-group-flush border-top border-bottom my-3">
                                <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0">
                                    <span class="text-muted"><i class="bi bi-flag-fill me-2"></i>Nationality:</span>
                                    <span class="fw-semibold">@passenger.Nationality</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0">
                                    <span class="text-muted"><i class="bi bi-phone-fill me-2"></i>Phone Number:</span>
                                    <span class="fw-semibold">@passenger.PhoneNumber</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0">
                                    <span class="text-muted"><i class="bi bi-passport-fill me-2"></i>Passport Number:</span>
                                    <span class="fw-semibold">@passenger.PassportNumber</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
