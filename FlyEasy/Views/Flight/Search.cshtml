@model List<FlyEasy.Models.Flight>

@{
    ViewData["Title"] = "Flights Search";
}

<div class="container mt-5">
    <div class="card shadow-lg mb-4">
        <div class="card-header bg-primary text-white text-center">
            <h2 class="card-title mb-0">Search for Flights</h2>
        </div>

        <div class="card-body p-4">
            <form method="post" asp-action="SearchResults" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="fromInput" class="form-label">From</label>
                    <input type="text" id="fromInput" name="from" class="form-control" required placeholder="City or airport">
                    <div class="invalid-feedback">
                        Please enter a departure city or airport.
                    </div>
                </div>
                <div class="mb-3">
                    <label for="toInput" class="form-label">To</label>
                    <input type="text" id="toInput" name="to" class="form-control" required placeholder="City or airport">
                    <div class="invalid-feedback">
                        Please enter a destination city or airport.
                    </div>
                </div>
                <div class="mb-3">
                    <label for="departureDate" class="form-label">Departure Date</label>
                    <input type="date" id="departureDate" name="departureDate" class="form-control" required>
                    <div class="invalid-feedback">
                        Please select a departure date.
                    </div>
                </div>
                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-primary btn-lg">Search</button>
                </div>
            </form>
        </div>
    </div>

    
    @if (Model != null)
    {
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2>Flights List</h2>
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Create" asp-controller="Flight" class="btn btn-outline-primary">
                    <i class="bi bi-plus-circle"></i> Add New Flight
                </a>
            }
        </div>

        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Id</th>
                        <th>From</th>
                        <th>To</th>
                        <th>Departure</th>
                        <th>Arrival</th>
                        <th>Price</th>
                        <th>Total Seats</th>
                        <th>AvailableSeats</th>
                        <th>AirplaneId</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.From</td>
                                <td>@item.To</td>
                                <td>@item.DepartureTime.ToString("g")</td>
                                <td>@item.ArrivalTime</td>
                                <td>@item.Price</td>
                                <td>@item.TotalSeats</td>
                                <td>@item.AvailableSeats</td>
                                <td>@item.AirPlaneId</td>
                                <td>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1" title="Edit">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger me-1" title="Delete">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                        <a asp-action="ViewApplicants" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="View Applicants">
                                            <i class="bi bi-people"></i> View Applicants
                                        </a>
                                    }
                                    else
                                    {
                                        <a asp-action="Apply" asp-route-id="@item.Id" class="btn btn-sm btn-success" title="Apply">
                                            <i class="bi bi-person-plus"></i> Apply for Flight
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="10" class="text-center text-muted">No flights found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
