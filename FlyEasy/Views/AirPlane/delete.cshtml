@model AirPlane

@{
    ViewData["Title"] = "Delete Airplane";
}

<div class="container mt-5">
    <div class="card border-danger shadow">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">Confirm Deletion</h3>
        </div>
        <div class="card-body">
            <h5 class="text-danger mb-3">Are you sure you want to delete this airplane?</h5>

            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Tail Number</dt>
                <dd class="col-sm-9">@Model.TailNumber</dd>

                <dt class="col-sm-3">Capacity</dt>
                <dd class="col-sm-9">@Model.Capacity</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-end gap-2">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                    <a asp-action="GetAll" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
