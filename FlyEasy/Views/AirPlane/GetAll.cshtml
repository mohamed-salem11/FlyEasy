@model List<AirPlane>
@{
    ViewData["Title"] = "Airplanes";
    int currentPage = ViewBag.CurrentPage;
    int totalPages = ViewBag.TotalPages;
}

<style>
    .btn-edit {
        background-color: #6c757d;
        color: white;
        border: none;
    }

        .btn-edit:hover {
            background-color: #5a6268;
            color: white;
        }

    .btn-delete {
        background-color: #dc3545;
        color: white;
        border: none;
    }

        .btn-delete:hover {
            background-color: #c82333;
            color: white;
        }

    .pagination .page-item.active .page-link {
        background-color: #0d6efd;
        border-color: #0d6efd;
        color: white;
    }
</style>

<div class="alert alert-info d-flex justify-content-between align-items-center shadow-sm mb-4 mt-4">
    <div>
        <i class="bi bi-airplane-engines me-2"></i>
        <strong>Airplanes List</strong> — Manage your fleet and keep your aircraft data up to date.
    </div>
    <a asp-action="Create" asp-controller="AirPlane" class="btn btn-sm btn-outline-primary">
        <i class="bi bi-plus-circle"></i> Add New Airplane
    </a>
</div>

@if (Model != null && Model.Any())
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mb-5">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title text-primary fw-bold">
                            ✈️ @item.Name
                        </h5>
                        <p class="mb-1"><strong>ID:</strong> @item.Id</p>
                        <p class="mb-1"><strong>Tail Number:</strong> @item.TailNumber</p>
                        <p class="mb-3"><strong>Capacity:</strong> @item.Capacity</p>

                        <div class="d-flex flex-wrap gap-2">
                            <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-sm btn-edit">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-delete">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <a class="page-link" asp-action="GetAll" asp-route-page="@i">@i</a>
                </li>
            }
        </ul>
    </nav>
}
else
{
    <div class="alert alert-secondary text-center mb-5">
        <i class="bi bi-info-circle me-2"></i> No airplanes found.
    </div>
}










